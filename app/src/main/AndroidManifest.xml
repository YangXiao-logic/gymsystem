<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gymsystem">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gymsystem">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".MoredateActivity" />
        <activity android:name=".usersystem.UserinformationActivity" />
        <activity android:name=".usersystem.MemberActivity" />
        <activity android:name=".usersystem.PaymentrecordActivity" />
        <activity android:name=".usersystem.BookrecordActivity" />
        <activity android:name=".usersystem.AccountActivity" />
        <activity android:name=".usersystem.AddressActivity" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.s
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".booksystem.FacilityActivity" />
        <activity android:name=".loginsystem.QverificationActivity" />
        <activity android:name=".loginsystem.QuickloginActivity" />
        <activity android:name=".loginsystem.FpasswordActivity" />
        <activity android:name=".loginsystem.SetpasswordActivity" />
        <activity android:name=".loginsystem.RverificationActivity" />
        <activity android:name=".loginsystem.RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".loginsystem.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>