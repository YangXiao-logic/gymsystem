<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".booksystem.BookitemFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        style="?attr/materialCardViewElevatedStyle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ifOpen"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="OPEN"
                android:textSize="20sp"
                android:gravity="center"
                android:background="#777777"
                android:textColor="@color/white"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imagecard_bookitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/itemimage_bookitem"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:background="@drawable/badminton"
                    android:contentDescription="badminton "
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>
            <!-- Media -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/itemname_bookitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Badminton hall 1"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/capacity_bookitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Capacity: 20 sites"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_baseline_location_on_24"/>

                    <TextView
                        android:id="@+id/itemlocation_bookitem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:text="England, London"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="#333333" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:text="Book now"
                        android:fontFamily="sans-serif-black"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>